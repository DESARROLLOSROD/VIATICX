# ============================================
# VIATICX Environment Variables
# ============================================
# IMPORTANT: Never commit the actual .env file to version control
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://viaticx_user:YOUR_SECURE_PASSWORD@localhost:5432/viaticx
POSTGRES_DB=viaticx
POSTGRES_USER=viaticx_user
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# ============================================
# JWT & AUTHENTICATION
# ============================================
# Generate secure random strings for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRATION=15m
REFRESH_TOKEN_SECRET=CHANGE_ME_TO_DIFFERENT_RANDOM_64_CHAR_STRING
REFRESH_TOKEN_EXPIRATION=7d

# ============================================
# REDIS (Optional but recommended)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf
UPLOAD_PATH=./uploads

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# ============================================
# EMAIL (Future feature)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@viaticx.com

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:3001/api/v1
VITE_APP_NAME=VIATICX
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
